{
    "compilerOptions": {
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": true,
      "isolatedModules": true,
      "moduleResolution": "node16",
      "noUncheckedIndexedAccess": true,
      "strict": true,
      "skipLibCheck": true,
      "target": "ES2020",
      "baseUrl": ".",
      "paths": {
        "@charts-lib/renderer": ["./packages/renderer/src"],
        "@charts-lib/react-components": ["./packages/react-components/src"]
      }
    },
    "exclude": ["node_modules"]
  }