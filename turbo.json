{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "inputs": ["$TURBO_DEFAULT$", "!**/*.stories.{tsx,jsx,mdx}"],
        "outputs": ["dist/**", "storybook-static/**"],
        "dependsOn": ["^build"]
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "clean": {
        "cache": false
      }
    }
  }